{
  "openapi": "3.0.0",
  "info": {
    "title": "ClinicHub API",
    "description": "FHIR-Compliant Practice Management System API",
    "version": "2.0.0",
    "contact": {
      "name": "ClinicHub Support",
      "email": "support@clinichub.com"
    }
  },
  "servers": [
    {
      "url": "/api",
      "description": "Production API"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health Check",
        "description": "Check system health and database connectivity",
        "responses": {
          "200": {
            "description": "System healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string"},
                    "database": {"type": "string"},
                    "timestamp": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "User Login",
        "description": "Authenticate user and return JWT token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {"type": "string"},
                  "password": {"type": "string"}
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {"type": "string"},
                    "token_type": {"type": "string"},
                    "user": {"type": "object"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/patients": {
      "get": {
        "summary": "List Patients",
        "description": "Get all patients with FHIR compliance",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "List of patients",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Patient"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create Patient",
        "description": "Create new FHIR-compliant patient record",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PatientInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Patient created successfully"
          }
        }
      }
    },
    "/employees": {
      "get": {
        "summary": "List Employees",
        "description": "Get all employees for HR management",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "List of employees"
          }
        }
      }
    },
    "/inventory": {
      "get": {
        "summary": "List Inventory",
        "description": "Get all inventory items with stock levels",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "List of inventory items"
          }
        }
      }
    },
    "/receipts": {
      "post": {
        "summary": "Create Receipt",
        "description": "Generate payment receipt",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "Receipt created successfully"
          }
        }
      }
    },
    "/time-tracking/clock-in": {
      "post": {
        "summary": "Clock In",
        "description": "Record employee clock-in time",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "Clocked in successfully"
          }
        }
      }
    },
    "/payroll/run": {
      "post": {
        "summary": "Process Payroll",
        "description": "Calculate and process payroll for period",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "Payroll processed successfully"
          }
        }
      }
    },
    "/audit": {
      "get": {
        "summary": "Get Audit Logs",
        "description": "Retrieve HIPAA-compliant audit trail",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "Audit logs retrieved"
          }
        }
      }
    },
    "/notifications": {
      "get": {
        "summary": "Get Notifications",
        "description": "Retrieve system notifications",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "Notifications retrieved"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Patient": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "resourceType": {"type": "string", "example": "Patient"},
          "name": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "given": {"type": "array", "items": {"type": "string"}},
                "family": {"type": "string"}
              }
            }
          },
          "gender": {"type": "string"},
          "birthDate": {"type": "string", "format": "date"},
          "telecom": {"type": "array"},
          "address": {"type": "array"}
        }
      },
      "PatientInput": {
        "type": "object",
        "properties": {
          "first_name": {"type": "string"},
          "last_name": {"type": "string"},
          "date_of_birth": {"type": "string", "format": "date"},
          "gender": {"type": "string"},
          "phone": {"type": "string"},
          "email": {"type": "string", "format": "email"}
        },
        "required": ["first_name", "last_name", "date_of_birth"]
      }
    }
  },
  "security": [
    {"bearerAuth": []}
  ]
}